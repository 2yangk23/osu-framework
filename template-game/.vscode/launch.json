{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TemplateGame (Debug)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "${workspaceRoot}/TemplateGame.Desktop/bin/Debug/netcoreapp3.0/TemplateGame.Desktop.dll",
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Build TemplateGame (Debug)",
            "linux": {
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceRoot}/TemplateGame.Desktop/bin/Debug/netcoreapp3.0:${env:LD_LIBRARY_PATH}"
                }
            },
            "console": "internalConsole"
        },
