<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>
  <PropertyGroup Label="NuGet">
    <Title>osu!framework Game Templates</Title>
    <Product>osu!framework game templates</Product>
    <Description>A collection of sample games powered by osu! framework.</Description>
    <PackageId>ppy.osu.Framework.Templates</PackageId>
    <PackageType>Template</PackageType>
    <PackageTags>osu game template framework</PackageTags>
    <PackageProjectUrl>https://github.com/ppy/osu-framework/tree/master/osu.Framework.Templates</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ppy/osu-framework/tree/master/osu.Framework.Templates</RepositoryUrl>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>templates</ContentTargetFolders>
  </PropertyGroup>
  <ItemGroup>
    <Content Include=".template.config\*;app.manifest;Directory.Build.props;templates\**\*" Exclude="**\bin\**;**\obj\**" />
    <Compile Remove="**\*" />
  </ItemGroup>
</Project>
